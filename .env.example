# ====================================
# ENVIRONMENT CONFIGURATION
# ====================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to Git (already in .gitignore)

# Environment (development, production)
NODE_ENV=development

# ====================================
# DATABASE CONFIGURATION
# ====================================
# Local: Uses SQLite automatically (no config needed)
# Production: Uses PostgreSQL via Supabase

# Supabase PostgreSQL (Production only)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_DB_URL=your_supabase_db_connection_string

# ====================================
# SESSION CONFIGURATION
# ====================================
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_random_session_secret_here

# ====================================
# GOOGLE OAUTH CONFIGURATION
# ====================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:1338/auth/google/callback

# ====================================
# EMAIL CONFIGURATION (Gmail)
# ====================================
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASS=your_gmail_app_password

# ====================================
# APPLICATION
# ====================================
PORT=1338
BASE_URL=http://localhost:1338

# ====================================
# SECURITY (Production)
# ====================================
# Set allowed origins for CORS (comma-separated)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Enable strict SSL verification for database (set to true for proper certs)
# DB_SSL_REJECT_UNAUTHORIZED=false

# ====================================
# ADMIN CONFIGURATION
# ====================================
# Default admin user (created on first run)
ADMIN_EMAIL=admin@moveout.com
ADMIN_PASSWORD=Admin@123

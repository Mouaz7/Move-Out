<%- include("../partials/header") %>

<div class="main-content">
  <div class="container">
    <h1 data-i18n="verifyAccount">Verify Your Account</h1>

    <% if (successMessage) { %>
    <p class="message success"><%= successMessage %></p>
    <% } %> 
    <% if (!verified) { %>
    <form action="/move/verify-code" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <label for="email"><span data-i18n="email">Email</span>:</label>
      <input type="email" id="email" name="email" required value="<%= email %>" readonly />

      <label for="verificationCode"><span data-i18n="verificationCode">Verification Code</span>:</label>
      <input type="text" id="verificationCode" name="verificationCode" required />

      <button type="submit" data-i18n="verify">Verify</button>
    </form>
    <% } %> 
    <% if (errorMessage) { %>
    <p class="message error"><%= errorMessage %></p>
    <% } %>
  </div>
</div>

<% if (verified) { %>
<script nonce="<%= cspNonce %>">
  setTimeout(function() {
    window.location.href = '/move/about';
  }, 5000);
</script>
<% } %>

<%- include("../partials/footer") %>

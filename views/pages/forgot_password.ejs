<%- include("../partials/header") %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/style/style.css" />
  </head>
  <body>
    <div class="login-container">
      <div class="login-box">
        <h1 class="login-title">Forgot Password</h1>
        
        <% if (errorMessage) { %>
        <div class="error-message">
          <p><%= errorMessage %></p>
        </div>
        <% } %>
        
        <% if (successMessage) { %>
        <div class="success-message">
          <p><%= successMessage %></p>
        </div>
        <% } %>

        <p style="text-align: center; margin-bottom: 20px; color: var(--text-secondary);">
          Enter your email address and we'll send you a reset code.
        </p>

        <form action="/move/forgot-password" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="input-container">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required placeholder="your@email.com" />
          </div>

          <button type="submit" class="btn btn-primary" style="width: 100%;">Send Reset Code</button>
        </form>

        <div style="text-align: center; margin-top: 20px;">
          <a href="/move/login" style="color: var(--primary-color);">Back to Login</a>
        </div>
      </div>
    </div>

    <%- include("../partials/footer") %>
  </body>
</html>

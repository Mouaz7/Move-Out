<%- include("../partials/header") %>

<div class="login-container">
  <div class="login-box">
    <h1 class="login-title" data-i18n="forgotPasswordTitle">Forgot Password</h1>
    


    <p style="text-align: center; margin-bottom: 20px; color: var(--text-secondary);" data-i18n="forgotPasswordInfo">
      Enter your email address and we'll send you a reset code.
    </p>

    <form action="/move/forgot-password" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="input-container">
        <label for="email" data-i18n="email">Email</label>
        <input type="email" id="email" name="email" required placeholder="your@email.com" />
      </div>

      <button type="submit" class="btn btn-primary" style="width: 100%;" data-i18n="sendResetCode">Send Reset Code</button>
    </form>

    <div style="text-align: center; margin-top: 20px;">
      <a href="/move/login" style="color: var(--primary-color);" data-i18n="backToLogin">Back to Login</a>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>

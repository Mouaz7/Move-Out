    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon">
          <i class="fas fa-user-plus"></i>
        </div>
        <h3 class="feature-title" data-i18n="userProfileCreation">User Profile Creation</h3>
        <p class="feature-description" data-i18n="userProfileDesc">Easily register and manage your moving process with a personalized account.</p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">
          <i class="fas fa-tags"></i>
        </div>

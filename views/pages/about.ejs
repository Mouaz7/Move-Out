<%- include("../partials/header") %>

<main class="about-container">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-icon">
      <i class="fas fa-box-open"></i>
    </div>
    <h1 class="hero-title" data-i18n="welcomeTitle">Welcome to MoveOut!</h1>
    <p class="hero-subtitle" data-i18n="welcomeSubtitle">Your journey towards a seamless moving experience begins here. We make your relocation process smoother, more organized, and entirely stress-free.</p>

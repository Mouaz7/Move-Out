<%- include("../partials/header") %>

<div class="login-container">
  <div class="login-box">
    <h1 class="login-title" data-i18n="resetPasswordTitle">Reset Password</h1>
    


    <p style="text-align: center; margin-bottom: 20px; color: var(--text-secondary);" data-i18n="resetPasswordInfo">
      Enter the reset code sent to your email and create a new password.
    </p>

    <form action="/move/reset-password" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <input type="hidden" name="email" value="<%= email %>" />
      
      <div class="input-container">
        <label for="resetCode" data-i18n="resetCode">Reset Code</label>
        <input type="text" id="resetCode" name="resetCode" required placeholder="123456" maxlength="6" />
      </div>

      <div class="input-container">
        <label for="newPassword" data-i18n="newPassword">New Password</label>
        <input type="password" id="newPassword" name="newPassword" required data-i18n-placeholder="passwordRequirements" placeholder="Min 8 chars, uppercase, number, special" />
      </div>

      <div class="input-container">
        <label for="confirmPassword" data-i18n="confirmNewPassword">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required data-i18n-placeholder="confirmYourPassword" placeholder="Confirm your password" />
      </div>

      <button type="submit" class="btn btn-primary" style="width: 100%;" data-i18n="resetPasswordBtn">Reset Password</button>
    </form>

    <div style="text-align: center; margin-top: 20px;">
      <a href="/move/forgot-password" style="color: var(--primary-color);" data-i18n="requestNewCode">Request New Code</a>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>

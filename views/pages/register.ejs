<%- include("../partials/header") %>
<div class="signup-container">
  <form action="/move/register" method="POST" class="signup-form" id="signup-form">
    <h1>Sign Up</h1>
    <p class="info-text">Create an account to get started</p>
    <hr />

    <label for="name">Name</label>
    <input type="text" placeholder="Enter Your Name" name="name" required />

    <label for="email">Email</label>
    <input type="email" placeholder="Enter Email" name="email" required />

    <label for="psw">Password</label>
    <input type="password" placeholder="Enter Password" name="psw" required />

    <label for="psw_repeat">Repeat Password</label>
    <input type="password" placeholder="Repeat Password" name="psw_repeat" required />

    <% if (errorMessage) { %>
    <div class="error-message" id="error-message">
      <p><%= errorMessage %></p>
    </div>
    <% } %>

    <button type="submit" class="signupbtn" id="submit-button">Sign Up</button>

    <div class="login-link" id="login-link">
      <p>Already have an account? <a href="/move/login">Login here</a></p>
    </div>
  </form>
</div>

<%- include("../partials/footer") %>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const errorMessage = document.getElementById("error-message");
    const submitButton = document.getElementById("submit-button");
    const loginLink = document.getElementById("login-link");
    const passwordFields = document.querySelectorAll('input[type="password"]');

    if (errorMessage) {
      submitButton.style.display = "none";
      loginLink.style.display = "none";
      errorMessage.style.display = "block";
      setTimeout(() => {
        errorMessage.style.display = "none";
        submitButton.style.display = "block";
        loginLink.style.display = "block";
      }, 4000);
    }
  });
</script>

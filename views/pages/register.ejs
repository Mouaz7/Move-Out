<%- include("../partials/header") %>

<div class="signup-container">
  <form action="/move/register" method="POST" class="signup-form" id="signup-form">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <h1><i class="fas fa-user-plus"></i> <span data-i18n="signUpTitle">Sign Up</span></h1>
    <p class="info-text" data-i18n="createAccountInfo">Create an account to start organizing your move</p>
    <hr />

    <div class="input-container">
      <label for="name"><i class="fas fa-user"></i> <span data-i18n="name">Name</span></label>
      <input type="text" data-i18n-placeholder="enterName" placeholder="Enter your name" id="name" name="name" required />
    </div>

    <div class="input-container">
      <label for="email"><i class="fas fa-envelope"></i> <span data-i18n="email">Email</span></label>
      <input type="email" data-i18n-placeholder="enterEmail" placeholder="Enter your email" id="email" name="email" required />
    </div>

    <div class="input-container">
      <label for="psw"><i class="fas fa-lock"></i> <span data-i18n="password">Password</span></label>
      <input type="password" data-i18n-placeholder="createPassword" placeholder="Create a password" id="psw" name="psw" required />
    </div>

    <div class="input-container">
      <label for="psw_repeat"><i class="fas fa-check-circle"></i> <span data-i18n="confirmPassword">Confirm Password</span></label>
      <input type="password" data-i18n-placeholder="repeatPassword" placeholder="Repeat your password" id="psw_repeat" name="psw_repeat" required />
    </div>

    <% if (errorMessage) { %>
    <div class="error-message" id="error-message">
      <p><i class="fas fa-exclamation-triangle"></i> <%= errorMessage %></p>
    </div>
    <% } %>

    <button type="submit" class="signupbtn" id="submit-button"><i class="fas fa-rocket"></i> <span data-i18n="signUpBtn">Sign Up</span></button>

    <div class="login-link" id="login-link">
      <p><span data-i18n="haveAccount">Already have an account?</span> <a href="/move/login"><i class="fas fa-sign-in-alt"></i> <span data-i18n="loginHere">Login here</span></a></p>
    </div>
  </form>
</div>

<%- include("../partials/footer") %>

<script nonce="<%= cspNonce %>">
  document.addEventListener("DOMContentLoaded", () => {
    const errorMessage = document.getElementById("error-message");
    const submitButton = document.getElementById("submit-button");
    const loginLink = document.getElementById("login-link");

    if (errorMessage) {
      submitButton.style.display = "none";
      loginLink.style.display = "none";
      errorMessage.style.display = "block";
      setTimeout(() => {
        errorMessage.style.display = "none";
        submitButton.style.display = "block";
        loginLink.style.display = "block";
      }, 4000);
    }
  });
</script>
